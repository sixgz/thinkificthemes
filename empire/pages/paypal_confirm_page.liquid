{% comment %}
  This is page that is displayed to the buyer after going through the PayPal
  Express Checkout process.
{% endcomment %}

<main class="checkout checkout__paypal-express" id="main-content" role="main">
  <div class="checkout__container">
    <div class="checkout__wrapper">
      <ul class="progress-bar">
        <li class="active">{{ 'liquid.views.paypal_confirm_page.list_account_setup' | translate }}</li>
        <li class="active">{{ 'liquid.views.paypal_confirm_page.list_paypal_confirmation' | translate }}</li>
      </ul>
      <section class="paypal-express-checkout__form">
        <div class="checkout__product-list">
          <div class="checkout__product-list-item">
            <div class="checkout__product-details__wrapper">
              {% if page.product.image.small != blank %}
              {% assign product_image = page.product.image.small %}
              {% else %}
              {% assign product_image = page.product.image.original %}
              {% endif %}
              <img src="{{ product_image }}" alt="{{ page.product.name }}" title="{{ page.product.name }}" class="checkout__product-image" />
              <div class="checkout__product-details">
                <span class="checkout__product-name">{{ page.product.name }}</span>
                <span class="checkout__product-price">{{ page.product_display_price }}</span>
              </div>
            </div>
          </div>
        </div>
        {{ page.paypal_confirmation_form }}
      </section>
      <section class="paypal-express-checkout__order-security">
        <img src="{{ page.secure_payment_badge_url }}" />
      </section>
    </div>
  </div>
</main>
