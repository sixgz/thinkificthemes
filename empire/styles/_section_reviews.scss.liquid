// Reviews
// ======================================

.reviews {
  overflow: hidden;

  .section__headings {
    margin: 0 0 $gutter-width * 2;
  }

  .section__heading,
  .section__subheading {
    color: $heading__color;
  }

  .section__content {
    padding: 0 $gutter-width;
  }

  .owl-carousel {
    .owl-nav {
      top: 5rem;

      .owl-prev,
      .owl-next {
        font-size: 1.5rem;

        &:active,
        &:focus,
        &:hover {
          color: $white;
        }
      }

      .owl-prev {
        left: -($gutter-width);
      }

      .owl-next {
        right: -($gutter-width);
      }
    }
  }
}

.reviews__container {
  @include make-container;
}

.reviews__list {
  @include screen-lg-min {
    @include make-col(8);
  }
  @include make-col(12);

  margin: 0 auto;

  .owl-item {
    &.active {
      @include screen-md-min {
        padding-right: $gutter-width / 2;
        padding-left: $gutter-width / 2;
      }
    }
  }
}

.reviews__list-item {
  @include display(flex);
  @include flex-direction(column);

  height: 100%;
  padding: $gutter-width / 2;

  .review__author {
    margin: 0 0 $gutter-width / 1.5;
    padding: 0 0 $gutter-width;
    border-bottom: 1px solid $card__background-color--active;
  }

  .review__stars {
    @include transform-origin(0 70% 0);

    margin: 0 0 $gutter-width;
  }
}

.review__title,
.review__author {
  font-family: $body__font-family;
}

.review__title {
  margin: 0 0 $gutter-width / 2;
  color: $accent__color;
  font-family: $heading__font-family;
  font-size: modular-scale(1);
}

.review__author {
  color: $body__text-color;
  font-size: modular-scale(-1);
}

.review__body--complete {
  display: none;
}

.review__show-more,
.review__show-less {
  font-size: 0.875rem;
  font-weight: bold;

  &,
  &:active,
  &:focus,
  &:hover {
    text-decoration: none;
  }
}
