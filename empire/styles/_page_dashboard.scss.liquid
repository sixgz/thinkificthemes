// Dashboard
// ======================================

.student-dashboard__container {
  @include make-container;
  @include page-padding($gutter-width * 2, $gutter-width);
}

.student-dashboard__heading {
  margin: 0;
  font-family: $heading__font-family;
  font-size: modular-scale(2);
  font-weight: 300;
  text-align: center;
}

.student-dashboard__form {
  a {
    text-decoration: none;
  }

  h1 {
    margin-bottom: $gutter-width / 2;
    font-weight: 400;
  }

  .form__group {
    @include justify-content(space-between);

    margin-right: 0;
    margin-left: 0;
  }

  .form__select-no-label {
    @include flex-grow(0);

    .form__control {
      border: 0;
      background-color: transparent;
      direction: rtl;
    }
  }
}
