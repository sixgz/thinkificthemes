// Lists
// ======================================

[class*="__wrapper"] {

  &>[class*="__menu"] {

    li {
      display: block;

      a {
        @include transition(background-color 400ms ease, color 0 ease);

        display: block;
        position: relative;
        padding: $gutter-width / 3 $gutter-width / 2;
        color: transparentize($body__text-color, 0.4);
        font-family: $heading__font-family;
        font-size: modular-scale(0);
        font-weight: 600;
        line-height: 1;
        text-align: left;
        text-decoration: none;

        &:active,
        &:focus,
        &:hover,
        &.active {
          background-color: transparentize($accent__color, 0.9);
          color: inherit;
        }
      }
    }

    @media screen and (min-width: $screen-md) and (max-width: $screen-md-max) {
      ul {
        border: 0;
        border-bottom: 1px solid gray-scale(1);
        font-size: 0;
      }

      li {
        display: inline-block;
        width: auto;

        &:first-child {
          a {
            border-left: 1px solid gray-scale(1);
          }
        }

        a {
          position: relative;
          top: 1px;
          border-top: $interface__border;
          border-right: $interface__border;
          background-color: $interface__background-color;
          font-size: 1rem;

          &:before {
            content: none;
          }

          &.active {
            border-bottom: 1px solid $interface__background-color;
            background: $interface__background-color--active;
          }
        }
      }
    }
  }
}
