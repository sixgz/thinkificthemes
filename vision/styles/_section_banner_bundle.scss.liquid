// Banner (Bundle)
// ======================================

.banner-bundle {
  @include screen-lg-min {
    @include display(flex);
    @include align-items(center);
  }

  &.section--has-social {

    &.section__content-alignment--left,
    &.section__content-alignment--center {
      .section__video {
        @include screen-xl-min {
          padding-right: $gutter-width;
        }
      }
    }

    &.section__content-alignment--right {

      .section__content {
        @include screen-xl-min {
          padding-right: $gutter-width;
        }
      }
    }

    .banner__wrapper {
      @media only screen and (min-width: 31.25rem) {
        padding-right: $gutter-width * 3;
      }
    }
  }

  &.section--has-video,
  &.section--has-video-thumbnail {

    &.section__content-alignment--left,
    &.section__content-alignment--center {

      .section__content {
        @include screen-lg-min {
          padding-right: $gutter-width;
        }
        @include screen-xl-min {
          padding-right: $gutter-width * 1.5;
        }
      }
    }

    &.section__content-alignment--right {
      @include screen-lg-min {
        .section__content {
          @include order(2);
        }

        .section__video {
          @include order(1);
        }
      }

      .section__content {
        @include screen-lg-min {
          padding-right: 0;
          padding-left: $gutter-width * 1.5;
        }
      }
    }

    .section__content {
      @include screen-md-max {
        padding-bottom: $gutter-width * 1.5;
      }
      @include screen-lg-min {
        padding-top: $gutter-width * 2;
      }
    }
  }

  &.section--has-free-trial {

    .section__content {
      @include screen-tablet-only {
        @include make-col(12, false);
      }
    }

    .section__video {
      @include screen-tablet-only {
        @include make-col(12, false);
      }
    }

    .bundle-action-buttons--has-additional-prices {
       @include screen-sm-max {
        .button,
        .form__control.bundle-action-buttons__additional-prices {
          font-size: 0.875rem;
        }
      }
    }
  }

  &.section--has-video-thumbnail {

    .section__video__wrapper {
      @include screen-md-min {
        min-height: 24rem;
      }
      min-height: 18rem;
    }
  }

  .section__content {
    @include screen-lg-min {
      @include make-col(6, false);
    }
    @include make-col(12, false);
  }

  .section__headings {
    margin: 0;
  }

  .section__heading {
    @include screen-lg-min {
      font-size: 2.75rem;
    }

    margin: 0;
    font-family: $banner__font-family;
    font-size: 2rem;
    font-weight: $banner__font-weight;
    line-height: 1.3;
    -moz-hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    hyphens: auto;
  }

  .section__subheading {
    @include screen-lg-min {
      font-size: 1.222rem;
    }

    margin: 0 0 0.8rem;
    font-family: $subheading__font-family;
    font-size: 1rem;
    font-weight: $subheading__font-weight;
    line-height: 1.667;
    opacity: 1;
  }

  .section__button-group {
    @include button-group;
    @include screen-xl-min {
      @include flex-wrap(nowrap);
    }

    padding-top: $gutter-width;

    .bundle-action-buttons__purchase {

      &:only-child {
        width: 100%;
      }
    }

    .button {
      @include screen-xs-max {
        margin-bottom: 1rem;
      }

      &-free-trial {
        margin-right: 0;
      }
    }
  }

  .section__video {
    @include screen-lg-min {
      @include make-col(6, false);

      padding-right: 0;
      padding-left: 0;
    }
    @include make-col(12, false);
    @include align-self(center);

    &:after {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-repeat: no-repeat;
      background-position: center center;
      background-size: cover;
      z-index: z-index(element--middleground);
    }

    &__wrapper {
      box-shadow: $shadow-image;
    }
  }

  .section__social-nav {
    @media only screen and (max-width: 31.188rem) {
      @include make-col(12);
      @include order(2);

      padding-top: $gutter-width;
      text-align: center;
    }
    @media only screen and (min-width: 31.25rem) {
      position: absolute;
      right: 1rem;
      bottom: 0;
      z-index: z-index(element--foreground);
    }
  }

  .social-nav__list-item {
    @media only screen and (max-width: 31.188rem) {
      display: inline-block;
      margin-right: $gutter-width / 2;

      &:last-child {
        margin-right: 0;
      }
    }
    @media only screen and (min-width: 31.25rem) {
      margin: 0 0 $gutter-width / 2;

      &:last-child {
        margin: 0;
      }
    }

    line-height: 1;
    text-align: center;

    a {
      @media only screen and (min-width: 31.25rem) {
        font-size: 1.5rem;
      }

      font-size: 2rem;
      opacity: 0.6;

      &,
      &:active,
      &:focus,
      &:hover {
        @include transition(opacity 200ms ease);
      }

      &:active,
      &:focus,
      &:hover {
        opacity: 1;
      }
    }
  }

  .video__play-button {
    @include transform(translate3d(-50%, -50%, 0));

    position: absolute;
    top: 50%;
    left: 50%;
  }
}

.banner__container {
  @include make-container();
}

.banner__wrapper {
  @include make-row(false);

  position: relative;
}
