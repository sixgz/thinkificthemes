// Dashboard
// ======================================

.student-dashboard {
  background-color: $body__background-color;
}

.student-dashboard__container {
  @include make-container;
  @include page-headings;
  @include screen-lg-min {
    padding-top: $gutter-width;
    padding-bottom: $gutter-width;
  }

  padding-top: $gutter-width / 2;
  padding-bottom: $gutter-width / 2;
}

.student-dashboard__banner {
  background-color: $interface__background-color;

  p {
    margin: 0;
    font-family: $body__font-family;
    font-size: modular-scale(4);
    font-weight: 400;
  }
}

.student-dashboard__form {
  a {
    text-decoration: none;
  }

  h1 {
    margin-bottom: $gutter-width / 2;
    font-weight: 400;
  }

  .form__group {
    @include justify-content(space-between);

    margin-right: 0;
    margin-left: 0;
  }

  .form__select-no-label {
    @include flex-grow(0);

    .form__control {
      border: 0;
      background-color: transparent;
      direction: rtl;
    }
  }
}
