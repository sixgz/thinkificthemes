// Countdown Timer
// ======================================

.countdown {

  .section__headings {
    @include make-col(12);

    margin-bottom: $gutter-width * 2;
  }

  .section__heading,
  .section__subheading {
    @include align-self(center);

    text-align: center;
  }

  .section__content {
    @include make-col(12);
    @include align-self(center);

    text-align: center;
  }

  .section__heading-ornament {

    &:before {
      @include transform(translatex(-50%));

      top: 140%;
      left: 50%;
      width: $gutter-width;
      height: 4px;
    }
  }

  .section__button-group {
    @include make-col(12);

    padding-top: $gutter-width * 1.5;
    text-align: center;
  }

  ul {
    margin-left: 0;
  }
}

.countdown__container {
  @include make-container;
}

.countdown__wrapper {
  @include make-row(true);
  @include align-items(center);
}

.countdown-clock {
  @include screen-md-min {
    width: auto;
  }

  display: inline-block;
  width: 100%;
  margin: 0;
  font-size: 0;
  list-style: none;
  text-align: center;

  li {
    @include screen-sm-min {
      font-size: 2rem;
    }
    @include screen-md-min {
      min-width: 120px;
    }

    display: inline-block;
    min-width: 24%;
    padding: $gutter-width / 2;
    border: 1px solid transparentize($body__text-color, 0.8);
    background-color: $interface__background-color;
    color: $body__text-color;
    font-family: $heading__font-family;
    font-size: 1.25rem;
    font-weight: 800;
    line-height: 1;
    text-align: center;
    box-shadow: $shadow-menu;
    word-break: normal;

    &:not(:first-child) {
      border-left: 0;
    }

    strong {
      @include screen-xs-max {
        font-size: 0.5rem;
      }
      display: block;
      padding: 5px 0 0;
      font-family: $body__font-family;
      font-size: 0.8rem;
      font-weight: 600;
    }
  }
}
