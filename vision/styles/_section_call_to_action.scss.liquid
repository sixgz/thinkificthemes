// Call To Action
// ======================================

.call-to-action {

  .section__headings {
    margin: 0;
  }

  .section__content {
    @include make-col(12);
  }

  .section__heading,
  .section__subheading {
    @include screen-md-min {
      @include make-col(10, false);
    }
  }

  .section__heading {
    @include screen-lg-min {
      font-size: 2.75rem;
    }

    margin: 0;
    font-size: 2rem;
    font-weight:  $heading__font-weight;
    line-height: 1.3;
  }

  .section__subheading {
    @include screen-lg-min {
      font-size: 1.222rem;
    }

    margin: 0;
    font-family: $subheading__font-family;
    font-size: 1rem;
    font-weight: $subheading__font-weight;
    line-height: 1.667;
    opacity: 1;
  }

  .section__button-group {
    @include button-group;

    padding-top: $gutter-width;
    text-align: inherit;
  }
}

.call-to-action__container {
  @include make-container;
}

.call-to-action__wrapper {
  @include make-row;
}

.call-to-action__section-link {
  display: block;
  text-decoration: none;

  .section-height__large & {
    @include section-height(section-height-preset(large));
  }

  .section-height__medium & {
    @include section-height(section-height-preset(medium));
  }

  .section-height__small & {
    @include section-height(section-height-preset(small));
  }
}
