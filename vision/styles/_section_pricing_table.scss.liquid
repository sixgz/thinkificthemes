// Pricing Table
// ======================================

.pricing-table {

  &.section__column-layout__two-column {
    @include screen-lg-min {

      .section__content {
        padding-left: 0;
      }
    }
  }
}

.pricing-table__container {
  @include make-container;
}

.pricing-table__wrapper {
  @include make-row(true);
}

.pricing-table__list {

  li {
    @include screen-sm-min {
      @include display(flex);
      @include align-items(flex-start);
    }
  }
}

.pricing-table__list-item {
  @include justify-content(space-between);

  margin: 0 0 $gutter-width;
  padding: 0 0 $gutter-width;
  border-bottom: $interface__border;

  &:last-of-type {
    margin: 0;
    padding: 0;
    border-bottom: 0;
  }

  .button {
    @include screen-sm-max {
      display: block;
    }
    @include align-self(center);
  }
}

.pricing-table__list-item-details {
  @include screen-md-max {

    p {
      margin-bottom: $gutter-width;
    }
  }
  @include screen-sm-min {
    flex: 0 0 60%;
    align-self: center;
    max-width: 60%;
    min-height: 1px;
    padding: 0;
  }

  h3 {
    margin: 0 0 $gutter-width / 4;
    font-family: $body__font-family;
    font-size: modular-scale(2);
    font-weight: 600;
  }

  p {
    @include screen-sm-min {
      margin: 0;
    }

    color: $accent__color;
    font-size: modular-scale(-1);
    font-weight: bold;
  }
}
