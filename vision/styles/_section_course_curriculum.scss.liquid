// Course Curriculum
// ======================================

.course-curriculum {
  @include screen-lg-min {
    padding-top: $section-height__medium;
    padding-bottom: $section-height__medium;
  }

  padding-top: $section-height__medium / 2;
  padding-bottom: $section-height__medium / 2;

  .course-curriculum__chapter-list {
    @include make-row(false);
  }

  .course-curriculum__chapter {
    @include make-col(12);
    @include display(flex);
    @include transition(background-color 400ms ease);

    position: relative;
    padding-top: $gutter-width;
    padding-bottom: $gutter-width;
    background-color: transparentize($accent__color, 0.9);
    line-height: 1;

    &.course-curriculum__chapter--collapsed {
      @include transition(background-color 400ms ease);

      background-color: $interface__background-color;

      .course-curriculum__chapter-header {
        @include transition(margin-bottom 400ms ease);

        margin-bottom: 0;
      }
    }
  }

  .course-curriculum__chapter-number {
    position: absolute;
    top: 2px;
    left: 0;
    color: inherit;
    font-family: $heading__font-family;
    font-size: modular-scale(1);
    font-weight: bold;
    text-align: right;
    opacity: 0.8;
  }

  .course-curriculum__chapter-content-wrapper {
    @include make-row(false);
    @include screen-sm-max {
      padding-left: $gutter-width / 2;
      padding-right: $gutter-width / 2;
    }

    width: 100%;
    padding-right: $gutter-width * 1.5;
    padding-left: $gutter-width;
  }

  .course-curriculum__chapter-header {
    @include transition(margin-bottom 400ms ease);
    @include screen-md-min {
      @include make-col(6);
      position: initial;
    }
    @include screen-tablet-only {
      padding-right: 0;
    }
    @include make-col(12);

    position: initial;
    margin-bottom: $gutter-width;
    padding-right: 0;
  }

  .course-curriculum__chapter-title {
    @include screen-sm-min {
      padding-right: $gutter-width;
    }

    position: relative;
    margin: 0;
    font-size: modular-scale(1);

    &:after {
      content: "";
      opacity: 0;
    }
  }

  .course-curriculum__chapter-content {
    @include screen-md-min {
      @include flex-grow(1);

      width: auto;
      max-width: 50%;
    }

    width: 100%;
    margin: 0;
    list-style: none;
  }

  .course-curriculum__chapter-lesson {
    @include screen-sm-max {
      padding-right: $gutter-width * 1.5;
      padding-left: $gutter-width;
    }

    display: block;
    position: relative;
    padding-right: $gutter-width * 2;
    padding-left: $gutter-width * 1.25;

    &,
    &:active,
    &:focus,
    &:hover {
      color: $body__text-color;
      text-decoration: none;
    }

    i {
      display: inline-block;
      position: absolute;
      top: -3px;
      left: 0;
      color: $accent__color;
      font-size: modular-scale(1);
    }
  }
}

.course-curriculum__container {
  @include make-container(false);
  padding-top: 0 !important;
  padding-bottom: 0 !important;
}

.course-curriculum__chapter-header {
  @include screen-md-min {
    position: initial;
  }

  position: relative;
  cursor: pointer;
}

.course-curriculum__chapter-header__toggle {
  @include screen-md-min {
    right: $gutter-width / 2;

    .course-curriculum__chapter--collapsed & {

      right: $gutter-width;
      width: auto;
    }
  }

  display: inline-block;
  position: absolute;
  top: 0;
  right: 0;
  width: $gutter-width / 2;
  height: $gutter-width / 2;

  &-label {
    @include screen-sm-max {
      display: none;
    }

    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    opacity: 0;
    z-index: z-index(element--foreground);

    .course-curriculum__chapter--collapsed & {
      @include transition(opacity 400ms ease);

      position: initial;
      top: initial;
      left: initial;
      width: auto;
      opacity: 1;
    }
  }

  i {
    display: inline-block;
    position: relative;
    top: 6px;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 1em;

    &:before,
    &:after {
      @include transition(all 0.25s ease);

      position: absolute;
      top: 0;
      left: 0;
      width: 2px;
      height: 12px;
      background-color: $accent__color;
      content: "";
    }

    &:before {
      @include transform(translate(12px, 0) rotate(-42deg));
    }

    &:after {
      @include transform(translate(4px, 0) rotate(42deg));
    }
  }

  .course-curriculum__chapter--collapsed & {

    i {
      @include screen-md-min {
        left: 1rem;
      }
      width: 1rem;

      &:before {
        @include transform(translate(12px, 0) rotate(-132deg));
      }

      &:after {
        @include transform(translate(4px, 0) rotate(132deg));
      }
    }
  }
}

.course-curriculum__chapter-content {

  a {
    text-decoration: none;

    &:active,
    &:focus,
    &:hover {
      text-decoration: underline;
    }
  }

  li {
    position: relative;
    margin-bottom: $gutter-width / 1.25;
    padding-left: $gutter-width / 2;
  }
}

.course-curriculum__chapter-content-wrapper {
  position: relative;
}

.course-curriculum__chapter-lesson--free {
  @include screen-sm-max {
    right: 0;
  }

  display: inline-block;
  position: absolute;
  top: 0;
  right: $gutter-width / 2;
  padding: 3px 6px;
  background-color: $accent__color;
  color: dynamic-contrast-color($accent__color);
  font-family: $heading__font-family;
  font-size: 0.8rem;
  font-weight: bold;
  line-height: normal;
  text-transform: uppercase;
}
