// Description
// ======================================

.description {

  &.section__column-layout__two-column {
    @include screen-lg-min {

      .section__content {
        padding-left: 0;
      }
    }

    .section__headings {
      @include screen-md-min {
        padding-right: $gutter-width * 2;
      }
    }
  }

  .section__headings {
    @include screen-md-min {
      @include make-col(6);
    }
    @include make-col(12);
  }

  .section__heading,
  .section__subheading {
    max-width: 100%;
  }

  .section__content {
    @include screen-md-min {
      @include make-col(6);
    }
    @include make-col(12);
  }

  .section__button-group {
    padding-top: $gutter-width;
  }
}

.description__container {
  @include make-container;
}

.description__wrapper {
  @include make-row(true);
}
