// Upsells
// ======================================

.upsells__container {
  @include make-container;
}

.upsells__list {
  @include make-row(true);
  @include justify-content(center);
}

.upsells__list-item {
  @include screen-md-min {
    @include make-col(6, true);

    margin-bottom: 0;
  }
  @include screen-lg-min {
    @include make-col(4, true);
  }
  @include make-col(12, true);

  position: relative;
  margin-bottom: $gutter-width;
  text-align: center;
}

.upsells__details {
  @include section-background-image;

  position: relative;
  height: 100%;
  box-shadow: $shadow-1;

  &:before {
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    content: "";
    z-index: z-index(element--background);
  }
}

.upsells__details__wrapper {
  @include screen-md-min {
    padding: 3rem 2rem;
  }
  @include display(flex);
  @include flex-direction(column);

  position: relative;
  height: 100%;
  padding: 2rem 1rem;
  z-index: z-index(element--foreground);
}

.upsells__title {
  @include heading-ornament;

  margin: $gutter-width 0;
  font-family: $body__font-family;
  font-size: modular-scale(1);

  &:before {
    @include transform(translatex(-50%));

    top: $gutter-width * -1;
    left: 50%;
    width: $gutter-width;
    height: 6px;
  }
}

.upsells__description {
  margin: 0 0 $gutter-width * 1.5;
  font-family: $subheading__font-family;
  font-size: 1rem;
  line-height: normal;
}

.upsells__price {
  margin: auto 0 0;
  font-size: modular-scale(2);
  font-weight: 400;
}

.upsells__buy {
  padding-top: $gutter-width;
}
