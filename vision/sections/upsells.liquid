<section class="upsells section-height__medium
{% include 'section_utility_heading_alignment' %}" data-preview-item="upsells">
  <div class="upsells__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <ul class="upsells__list section__body">
          {% for block in section.blocks %}
            {% assign upsell = block.settings %}
            {% assign price = upsell.price %}
            <li class="upsells__list-item">
              <div class="upsells__details" style="background-image:url({{ upsell.background_image }});">
                <section class="upsells__details__wrapper">
                  <h4 class="upsells__title">{{ price.product.name }}</h4>
                  <div class="upsells__description">
                    {{ upsell.body }}
                  </div>
                  <h4 class="upsells__price">
                    {{ price.display_price }}
                  </h4>
                  <span class="upsells__buy">
                    <a href="{{ price.links.add_to_cart }}" class="button button-{{ upsell.button_type }}">
                      {% if upsell.button_text != empty %} {{ upsell.button_text }} {% else %} {{ price.buy_button_text }} {% endif %}
                    </a>
                  </span>
                </section>
              </div>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </article>
  </div>
</section>

{% style %}

.upsells {
  {% include 'section_style_heading_alignment' %}
  {% include 'section_style_heading_ornament' %}

  {% if section.settings.text_color != blank %}
    .upsells__title,
    .upsells__description,
    .upsells__price {
      color: {{ section.settings.text_color }};
    }
  {% endif %}

  {% if section.settings.section_padding_top %}
    .upsells__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .upsells__container {
      padding-bottom: 0;
    }
  {% endif %}
}

{% endstyle %}

{% schema %}
{
  "label": "Upsells",
  "settings": [
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Upsells"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Choose Pricing Plan:"
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text color",
          "default":"#ffffff"
        }
      ]
    },
    {
      "label": "Layout",
      "settings": [
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add upsell",
    "limit":12,
    "types":[
      {
        "type":"upsell",
        "label":"Upsell",
        "settings":[
          {
            "type":"icon",
            "id":"icon",
            "label":"",
            "description":"",
            "default":"fa-calendar-o"
          },
          {
            "type":"price_picker",
            "id":"price",
            "label":"Product",
            "description":""
          },
          {
            "type":"text",
            "id":"button_text",
            "label":"Button text",
            "default":"Buy Now"
          },
          {
            "type":"radio",
            "id":"button_type",
            "label":"Button type",
            "description":"",
            "default":"primary",
            "options":[
              {
                "value":"primary",
                "label":"Primary"
              },
              {
                "value":"secondary",
                "label":"Secondary"
              }
            ]
          },
          {
            "type":"textarea",
            "id":"body",
            "label":"Description",
            "description":""
          },
          {
            "type":"image",
            "id":"background_image",
            "default":"https://cdn.thinkific.com/13/20180205/7e57f4d425ca1d31db8380c97d3f6771.png",
            "label":"Image",
            "description": ""
          }
        ]
      }
    ],
    "defaults":[]
  }
}
{% endschema %}
