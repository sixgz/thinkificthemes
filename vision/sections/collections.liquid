<div class="collections__wrapper">
  <aside class="collections__menu">
    <ul class="products__collections-list">
      {% for collection in site.collections %}
        {% if page.collection.id != nil and page.collection.id == collection.id %}
          <li class="products__collections-list-item"><a href="{{ collection.url }}" class="active">{{ collection.name }}</a></li>
        {% else %}
          <li class="products__collections-list-item"><a href="{{ collection.url }}">{{ collection.name }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </aside>
  <section class="collections__content">
    <h3 class="collections__heading">{{ page.collection.name }}</h3>
    {% if page.has_search_query %}
      {% include 'products_search_query' %}
    {% endif %}
    {% if page.has_products %}
      <div class="collections__product-cards">
        {% include 'products_card_list' %}
      </div>
    {% else %}
      <p class="products__list-no-results">
        {{ 'liquid.views.collections_index.text_no_results' | translate }}
      </p>
    {% endif %}
  </section>
</div>

{% style %}

.collections__product-cards {
  {% include 'section_style_card_alignment' %}
}

{% endstyle %}

