{% comment %}
  This is the card representation of your bundle.
{% endcomment %}

<a class="course-card course-card__public {{ bundle.status }}" href="{{ bundle.links.landing_page_url }}" tabindex="0">
  {% if bundle.image.medium != blank %}
  {% assign product_image = bundle.image.medium %}
  {% else %}
  {% assign product_image = bundle.image.original %}
  {% endif %}
  <header>
    <img class="course-card__img-container" src="{{ product_image }}" alt="{{ bundle.name }}" />
    <span class="course-card__bundled-courses"><i class="fa fa-clone" aria-hidden="true"></i>{{ bundle.courses.size }} {{ 'liquid.partials.bundle_card.details_courses' | translate }}</span>
  </header>
  <div class="course-card__body">
    <h3>{{ bundle.name }}</h3>
  </div>
  <footer class="course-card__details">
    {% if bundle.is_public %}
      <div class="course-card__price">
        {{ bundle.display_price }}
      </div>
    {% endif %}
  </footer>
</a>
