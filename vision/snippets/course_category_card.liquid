{% comment %}
  This is the card representation of your course categories.
{% endcomment %}
<a class="course-category-card" href="{{ collection.url }}" tabindex="0">
  {% if collection.image.medium != blank %}
  {% assign category_image = collection.image.medium %}
  {% else %}
  {% assign category_image = collection.image.original %}
  {% endif %}
  <header class="course-category-card__img-container">
    {% if section.settings.show_category_name %}
      <img class="course-category-card__img" src="{{ category_image }}" alt="{{ collection.name }}" aria-hidden="true"/>
      <div class="course-category-card__details">
        <p>{{ collection.name }}</p>
      </div>
    {% else %}
      <img class="course-category-card__img" src="{{ category_image }}" alt="{{ collection.name }}"/>
    {% endif %}
  </header>
</a>
